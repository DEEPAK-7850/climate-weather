{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "sourceMap": true,
    "declaration": false,
    "composite": false
  },
  "include": ["./server/**/*", "./shared/**/*"],
  "exclude": ["node_modules", "dist"]
} 